{
  "name": "easy-mvc",
  "version": "1.0.0",
  "description": "Easy MVC Framework.",
  "main": "gulpfile.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "standard --fix app/**/*.js ./*.js config/**/*.js config/*.js db/**/*.js lib/**/*.js test/**/*.js test/*.js",
    "db": "knex",
    "dev": "gulp",
    "build": "webpack --progress --hide-modules --config config/webpack.config.js --display-error-details",
    "serve": "node config/app.js",
    "test": "ava"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.24.0",
    "commander": "^2.15.1",
    "element-ui": "^2.3.6",
    "hapi": "^17.3.1",
    "inert": "^5.1.0",
    "joi": "^13.2.0",
    "knex": "^0.95.14",
    "mysql2": "^1.5.3",
    "objection": "^3.0.0",
    "require-directory": "^2.1.1",
    "vision": "^5.3.2",
    "vue": "^2.5.16",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-component": "^1.1.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "babel-runtime": "^6.26.0",
    "browser-sync": "^2.23.7",
    "cross-env": "^5.1.4",
    "css-loader": "^6.5.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "function-bind": "^1.1.1",
    "gulp": "^4.0.0",
    "gulp-nodemon": "^2.2.1",
    "hapi-swagger": "^9.1.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^7.0.0",
    "sass-loader": "^7.0.1",
    "standard": "^11.0.1",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^1.0.1",
    "vue-hot-reload-api": "^2.3.0",
    "vue-loader": "^15.0.4",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.6.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.1",
    "webpack-merge": "^4.1.2"
  },
  "standard": {
    "global": [
      "$container"
    ]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false
        }
      ]
    ],
    "plugins": [
      "transform-runtime",
      [
        "component",
        {
          "libraryName": "element-ui",
          "styleLibraryName": "theme-chalk"
        }
      ]
    ],
    "comments": false,
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "sources": [
      "**/*.{js}",
      "!public/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "tap": true,
    "compileEnhancements": false,
    "require": [],
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    }
  }
}
